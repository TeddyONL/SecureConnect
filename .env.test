# Test Environment Configuration
NODE_ENV=test
PORT=3001

# Test Database (use a separate database for testing)
DATABASE_URL="postgresql://user:password@localhost:5432/secure_connect_test"

# JWT (use different secrets for testing)
JWT_ACCESS_SECRET=test-access-secret
JWT_REFRESH_SECRET=test-refresh-secret
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Test API Keys (use test keys)
STRIPE_TEST_KEY=your_stripe_test_key
PAYPAL_TEST_CLIENT_ID=your_paypal_test_client_id

# Disable rate limiting in tests
RATE_LIMIT_MAX=0

# Test Logging
LOG_LEVEL=error
LOG_FILE=test.log