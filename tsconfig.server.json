{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src/server",
    "composite": true,
    "declaration": true,
    "declarationMap": true
  },
  "include": ["src/server/**/*"],
  "exclude": ["src/server/**/*.test.ts"]
}
